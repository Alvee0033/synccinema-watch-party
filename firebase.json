{
    "firestore": {
        "rules": "firestore.rules",
        "indexes": "firestore.indexes.json"
    },
    "database": {
        "rules": "database.rules.json"
    },
    "functions": {
        "source": ".",
        "runtime": "nodejs18",
        "predeploy": [
            "npm run build"
        ]
    },
    "hosting": {
        "public": "public",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**"
        ],
        "rewrites": [
            {
                "source": "**",
                "function": "nextjsFunc"
            }
        ]
    }
}